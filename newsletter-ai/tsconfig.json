{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["bun"],
    "baseUrl": ".",
    "paths": {
      "@mklyml/core": ["../../mkly/src/index.ts"],
      "@mklyml/kits/newsletter": ["../../mkly-kits/newsletter/src/index.ts"],
      "@mklyml/plugins/email": ["../email/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
